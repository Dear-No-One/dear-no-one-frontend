    {{#each model.member as |member|}}
    {{#each member.blogs as |blog|}}
      {{#paper-card as |card|}}
        {{#card.title as |title|}}
          {{#title.text as |text|}}
            {{#text.headline}}{{blog.postTitle}}{{/text.headline}}
            {{#text.subhead}}Author: {{member.username}}{{/text.subhead}}

          {{/title.text}}
        {{/card.title}}
        {{#card.content}}
          <p>
            {{blog.postBody}}
          </p>
        {{/card.content}}
        {{#card.actions class="layout-row layout-align-start-center" as |actions|}}
          {{#actions.icons}}
            <img src="assets/facebook.png" alt="" class="social-icon">
            <img src="assets/twitter.png" alt="" class="social-icon">
            <img src="assets/instagram.png" alt="" class="social-icon">
          {{/actions.icons}}
        {{/card.actions}}
      {{/paper-card}}
      {{/each}}
    {{/each}}

  </div>
