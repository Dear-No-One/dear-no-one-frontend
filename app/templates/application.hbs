{{#paper-toolbar class="navbar" }}
  <div class="md-toolbar-tools">
    {{#link-to 'index'}}{{paper-icon 'home'}}
      {{#paper-button}}Home{{/paper-button}}
    {{/link-to}}
    {{#link-to 'form'}}
      {{#paper-button}}Form{{/paper-button}}
    {{/link-to}}
    {{#link-to 'dashboard'}}
      {{#paper-button}}Dash Board{{/paper-button}}
    {{/link-to}}
    {{#link-to 'blog'}}
      {{#paper-button}}Blog{{/paper-button}}
    {{/link-to}}
    <div class="paper-right">
      <a {{action 'openAnimatedDialog'}}>{{#paper-button id="dialog-start"}}Create Blog{{/paper-button}}</a>

      {{paper-icon 'person'}}
      {{#if session.currentUser}}
        {{#paper-button action='logout' }}Logout{{/paper-button}}
      {{else}}
        {{#link-to 'login'}}
          {{#paper-button}}Login{{/paper-button}}
        {{/link-to}}
        {{#paper-button}}Register{{/paper-button}}
      {{/if}}
    </div>
  </div>
{{/paper-toolbar}}

{{outlet}}

{{#paper-toolbar class="footer" id="dialog-end"}}
  <p>&copy; Amanda & Friends</p>
{{/paper-toolbar}}


{{#if showAnimatedDialog}}
  {{#paper-dialog fullscreen=fullscreen onClose=(action "closeAnimatedDialog") openFrom="#dialog-start" closeTo="#dialog-end" }}

    {{#paper-dialog-content}}
      <h2 class="md-title">This dialog is animated!</h2>
      <p>It opened from above, but it will close to below.</p>
    {{/paper-dialog-content}}

    {{#paper-dialog-actions class="layout-row" }}
      <span class="flex"></span>
      {{#paper-button onClick=(action 'closeAnimatedDialog')}}Close{{/paper-button}}
      {{#paper-button primary=true}}Okay!{{/paper-button}}
    {{/paper-dialog-actions}}

  {{/paper-dialog}}
{{/if}}
